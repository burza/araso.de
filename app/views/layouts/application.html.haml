!!!
%html
  %head
    - title = yield(:title)
    %title=  title.blank? ? "Agile Rails Solutions - Web Design aus Hamburg" : title
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{:name => "keywords", :content => yield(:meta_keywords)}
    %meta{:name => "description", :content => yield(:meta_description)}
    %meta{:property => "og:title", :content => "ARASO - Agile Rails Solutions - Web-Design aus Hamburg"}
    %meta{:property => "og:type", :content => "company"}
    %meta{:property => "og:url", :content => "http://www.araso.de"}
    %meta{:property => "og:image", :content => "http://www.araso.de/images/araso.png"}
    %meta{:property => "og:description", :content => "ARASO...Web-Design aus Hamburg - Mit Agilen Methoden wird einfache, flexible und Mobil einsetzbare Software erstellt."}
    %meta{:property => "og:site_name", :content => "ARASO - Agile Rails Solutions"}
    %meta{:property => "fb:admins", :content => "1248800830"}
    = csrf_meta_tag
    %link{:rel => "shortcut icon", :href => "/favicon.ico"}
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 7]
      = stylesheet_link_tag 'compiled/ie6.css', :media => 'screen, projection'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'

    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js', 'modernizr-1.6.min', 'application'
    %meta{ :name => "viewport", :content => "width=device-width, user-scale=no"}
  %body
    #container
      %header
        .logo
          = link_to "araso", root_path
          .claim Awesome Rails Solutions
          // %canvas{ :id => "skyline", :width => "290px", :height => "120px", :style => ""}
        %nav
          %ol
            %li= link_to "Ãœber mich", root_path
            %li= link_to "Projekte", projects_path
            %li= link_to "Hobbys", about_path
      #center
        - flash.each do |name, msg|
          = content_tag :div, msg, :id => "flash_#{name}", :class => "feedback #{name}"
        = yield
        
      %footer
        %ol
          %li= link_to "Impressum", impressum_path
          %li= link_to "Datenschutz", datenschutz_path
          %li= link_to "Kontakt", new_contact_path
          %li= link_to "Blog", "http://blog.araso.de"
          %li.twitter= link_to image_tag("http://twitter-badges.s3.amazonaws.com/t_small-a.png", :alt => "Follow me on Twitter", :title => "Follow me on Twitter"), "http://www.twitter.com/burza"
          %li.facebook <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="http://www.araso.de" layout="button_count" show_faces="false" colorscheme="dark"></fb:like>

